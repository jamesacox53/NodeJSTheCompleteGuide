<%- include(path.join('..', 'includes', 'head.ejs')) %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include(path.join('..', 'includes', 'navigation.ejs')) %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="/<%= product.imageURL %>"
                                alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <% if (isAuthenticated) { %>
                            <form action="/cart" method="POST">
                                <button class="btn" type="submit">Add to Cart</button>
                                <input type="hidden" name="CSRFToken" value="<%= crsfToken %>">
                                <input type="hidden" name="productID" value="<%= product._id %>">
                            </form>
                            <% } %>
                        </div>
                    </article>
                <% } %>
            </div>
            <section class="pagination">
                <% for (const page of paginationPagesArr) { %>
                    <% if (page == currPage) { %>
                        <a class="active" href="/?page=<%= page %>"><%= page %></a>
                    <% } else { %>
                        <a href="/?page=<%= page %>"><%= page %></a>
                    <% } %>
                <% } %>
            </section>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include(path.join('..', 'includes', 'end.ejs')) %>