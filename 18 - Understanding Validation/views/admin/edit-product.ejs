<%- include(path.join('..', 'includes', 'head.ejs')) %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include(path.join('..', 'includes', 'navigation.ejs')) %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action="/admin/edit-product" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= product.title %>" class="<%= fieldErrorsObj.title ? 'invalid' : '' %>">
            </div>
            <div class="form-control">
                <label for="imageURL">Image URL</label>
                <input type="text" name="imageURL" id="imageURL" value="<%= product.imageURL %>" class="<%= fieldErrorsObj.imageURL ? 'invalid' : '' %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= product.price %>" class="<%= fieldErrorsObj.price ? 'invalid' : '' %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" class="<%= fieldErrorsObj.description ? 'invalid' : '' %>"><%= product.description %></textarea>
            </div>
            <input type="hidden" name="productID" value="<%= product._id %>">
            <input type="hidden" name="CSRFToken" value="<%= crsfToken %>">
            <button class="btn" type="submit">Edit Product</button>
        </form>
    </main>
<%- include(path.join('..', 'includes', 'end.ejs')) %>